<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:style>
        .form {
            margin-top: 20px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="container-fluid">
        <div class="row-fluid">
        
            <b:Hero>
                <b:Heading size="2">Projects Widget</b:Heading>
                <b:Paragraph>Manage your projects</b:Paragraph>
            </b:Hero>
        </div>
        
        <div class="row-fluid">
            <b:WellForm addStyleNames="{style.form}">
                <b:ControlLabel>Nb of projects</b:ControlLabel>
                <b:TextBox ui:field="nbProjectsBox" placeholder="How many projects do you have?"/>
                <b:ControlLabel/>
                <b:Button ui:field="sendBtn" type="PRIMARY">Send to the container</b:Button>
            </b:WellForm>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 